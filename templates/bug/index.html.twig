{% extends 'base.html.twig' %}

{% block title %}Bug index{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Bugs</h1>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Auteur</th>
                <th>EtatAvancement</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bug in bugs %}
            <tr>
                <td>{{ bug.id }}</td>
                <td>{{ bug.description }}</td>
                <td>{{ bug.auteur }}</td>
                <td>{{ bug.etatAvancement }}</td>
                <td>{{ bug.note }}</td>
                <td>
                    <a href="{{ path('bug_show', {'id': bug.id}) }}">show</a>
                    <a href="{{ path('bug_edit', {'id': bug.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bug_new') }}">Create new</a>
{% endblock %}

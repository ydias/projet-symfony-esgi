{% extends 'base.html.twig' %}

{% block title %}Bug{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Bugs</h1>
        </div>
    </div>
    <h1>Bug</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bug.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bug.description }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ bug.auteur }}</td>
            </tr>
            <tr>
                <th>EtatAvancement</th>
                <td>{{ bug.etatAvancement }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ bug.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bug_index') }}">back to list</a>

    <a href="{{ path('bug_edit', {'id': bug.id}) }}">edit</a>

    {{ include('bug/_delete_form.html.twig') }}
{% endblock %}

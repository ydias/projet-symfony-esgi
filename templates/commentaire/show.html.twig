{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Commentaire</h1>
            <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ commentaire.auteur }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ commentaire.date ? commentaire.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ commentaire.texte }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commentaire_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-primary">edit</a>

    {{ include('commentaire/_delete_form.html.twig') }}
{% endblock %}
